{
  "id": "settings_screen",
  "type": "Screen",
  "style": {
    "display": "flex",
    "flexDirection": "column",
    "backgroundColor": "#1C1C1C"
  },
  "children": [
    {
      "id": "settings_header",
      "type": "AppBar",
      "style": {
        "display": "flex",
        "flexDirection": "row",
        "justifyContent": "space-between",
        "alignItems": "center",
        "backgroundColor": "#1C1C1C",
        "paddingHorizontal": 16,
        "paddingVertical": 16
      },
      "children": [
        {
          "id": "back_arrow",
          "type": "Icon",
          "style": {
            "color": "#FFFFFF"
          }
        },
        {
          "id": "settings_title",
          "type": "Text",
          "text": "Settings",
          "style": {
            "color": "#FFFFFF",
            "fontSize": 20,
            "fontWeight": "500",
            "flex": 1,
            "marginLeft": 16
          }
        },
        {
          "id": "more_options",
          "type": "Icon",
          "style": {
            "color": "#FFFFFF"
          }
        }
      ]
    },
    {
      "id": "settings_content",
      "type": "Column",
      "style": {
        "display": "flex",
        "flexDirection": "column",
        "padding": 16
      },
      "children": [
        {
          "id": "account_settings_section",
          "type": "Column",
          "style": {
            "display": "flex",
            "flexDirection": "column",
            "marginBottom": 24
          },
          "children": [
            {
              "id": "account_settings_title",
              "type": "Text",
              "text": "Account Settings",
              "style": {
                "color": "#FFFFFF",
                "fontSize": 18,
                "fontWeight": "500",
                "marginBottom": 8
              }
            },
            {
              "id": "account_settings_subtitle",
              "type": "Text",
              "text": "Update your photo, password, language, and more.",
              "style": {
                "color": "#AAAAAA",
                "fontSize": 14
              }
            }
          ]
        },
        {
          "id": "change_name_section",
          "type": "Column",
          "style": {
            "display": "flex",
            "flexDirection": "column",
            "marginBottom": 24,
            "borderBottomWidth": 1,
            "borderBottomColor": "#333333",
            "paddingBottom": 16
          },
          "children": [
            {
              "id": "change_name_title",
              "type": "Text",
              "text": "Change name",
              "style": {
                "color": "#FFFFFF",
                "fontSize": 16,
                "marginBottom": 8
              }
            },
            {
              "id": "change_name_subtitle",
              "type": "Text",
              "text": "To change your name, ask your admin. Learn more",
              "style": {
                "color": "#AAAAAA",
                "fontSize": 14
              }
            }
          ]
        },
        {
          "id": "notifications_section",
          "type": "Column",
          "style": {
            "display": "flex",
            "flexDirection": "column",
            "marginBottom": 24,
            "borderBottomWidth": 1,
            "borderBottomColor": "#333333",
            "paddingBottom": 16
          },
          "children": [
            {
              "id": "notifications_title",
              "type": "Text",
              "text": "Notifications",
              "style": {
                "color": "#FFFFFF",
                "fontSize": 16,
                "marginBottom": 8
              }
            },
            {
              "id": "notifications_subtitle",
              "type": "Text",
              "text": "Choose which ones you get on this device and by email.",
              "style": {
                "color": "#AAAAAA",
                "fontSize": 14
              }
            }
          ]
        },
        {
          "id": "choose_theme_section",
          "type": "Column",
          "style": {
            "display": "flex",
            "flexDirection": "column",
            "marginBottom": 24,
            "borderBottomWidth": 1,
            "borderBottomColor": "#333333",
            "paddingBottom": 16
          },
          "children": [
            {
              "id": "choose_theme_title",
              "type": "Text",
              "text": "Choose theme",
              "style": {
                "color": "#FFFFFF",
                "fontSize": 16,
                "marginBottom": 8
              }
            },
            {
              "id": "theme_value",
              "type": "Text",
              "text": "System default",
              "style": {
                "color": "#AAAAAA",
                "fontSize": 14
              }
            }
          ]
        },
        {
          "id": "sync_cellular_section",
          "type": "Row",
          "style": {
            "display": "flex",
            "flexDirection": "row",
            "justifyContent": "space-between",
            "alignItems": "center",
            "marginBottom": 24,
            "borderBottomWidth": 1,
            "borderBottomColor": "#333333",
            "paddingBottom": 16
          },
          "children": [
            {
              "id": "sync_cellular_title",
              "type": "Text",
              "text": "Sync over cellular data",
              "style": {
                "color": "#FFFFFF",
                "fontSize": 16
              }
            },
            {
              "id": "sync_toggle",
              "type": "Icon",
              "style": {
                "backgroundColor": "#666666",
                "borderRadius": 20,
                "width": 48,
                "height": 28,
                "color": "#FFFFFF"
              }
            }
          ]
        },
        {
          "id": "about_section",
          "type": "Column",
          "style": {
            "display": "flex",
            "flexDirection": "column"
          },
          "children": [
            {
              "id": "about_title",
              "type": "Text",
              "text": "About",
              "style": {
                "color": "#FFFFFF",
                "fontSize": 16
              }
            }
          ]
        }
      ]
    }
  ]
}
