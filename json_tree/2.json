{
  "id": "deepseek_auth",
  "type": "Screen",
  "style": {
    "display": "flex",
    "flexDirection": "column",
    "justifyContent": "space-between",
    "alignItems": "center",
    "backgroundColor": "#1A1A1A",
    "padding": "24px"
  },
  "children": [
    {
      "id": "header",
      "type": "AppBar",
      "style": {
        "display": "flex",
        "justifyContent": "flex-end",
        "width": "100%",
        "marginBottom": "auto"
      },
      "children": [
        {
          "id": "contact_us_link",
          "type": "Text",
          "text": "Contact us",
          "style": {
            "fontSize": "16px",
            "color": "#888888"
          }
        }
      ]
    },
    {
      "id": "logo_section",
      "type": "Column",
      "style": {
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": "1"
      },
      "children": [
        {
          "id": "deepseek_logo",
          "type": "Image",
          "style": {
            "width": "80px",
            "height": "80px",
            "marginBottom": "24px",
            "color": "#4A90E2"
          }
        },
        {
          "id": "deepseek_text",
          "type": "Text",
          "text": "deepseek",
          "style": {
            "fontSize": "32px",
            "fontWeight": "normal",
            "color": "#4A90E2",
            "letterSpacing": "2px"
          }
        }
      ]
    },
    {
      "id": "auth_buttons_section",
      "type": "Column",
      "style": {
        "display": "flex",
        "flexDirection": "column",
        "width": "100%",
        "gap": "16px",
        "marginBottom": "32px"
      },
      "children": [
        {
          "id": "google_auth_button",
          "type": "Button",
          "style": {
            "display": "flex",
            "flexDirection": "row",
            "alignItems": "center",
            "justifyContent": "center",
            "backgroundColor": "#2A2A2A",
            "borderRadius": "8px",
            "padding": "16px",
            "border": "1px solid #444444",
            "gap": "12px"
          },
          "children": [
            {
              "id": "google_icon",
              "type": "Icon",
              "style": {
                "width": "20px",
                "height": "20px",
                "color": "#4285F4"
              }
            },
            {
              "id": "google_button_text",
              "type": "Text",
              "text": "Continue with Google",
              "style": {
                "fontSize": "16px",
                "color": "#FFFFFF"
              }
            }
          ]
        },
        {
          "id": "password_auth_button",
          "type": "Button",
          "style": {
            "display": "flex",
            "flexDirection": "row",
            "alignItems": "center",
            "justifyContent": "center",
            "backgroundColor": "#2A2A2A",
            "borderRadius": "8px",
            "padding": "16px",
            "border": "1px solid #444444",
            "gap": "12px"
          },
          "children": [
            {
              "id": "lock_icon",
              "type": "Icon",
              "style": {
                "width": "20px",
                "height": "20px",
                "color": "#FFFFFF"
              }
            },
            {
              "id": "password_button_text",
              "type": "Text",
              "text": "Continue with Password",
              "style": {
                "fontSize": "16px",
                "color": "#FFFFFF"
              }
            }
          ]
        },
        {
          "id": "signup_button",
          "type": "Button",
          "text": "Sign up",
          "style": {
            "backgroundColor": "#2A2A2A",
            "borderRadius": "8px",
            "padding": "16px",
            "border": "1px solid #444444",
            "fontSize": "16px",
            "color": "#FFFFFF",
            "textAlign": "center"
          }
        }
      ]
    },
    {
      "id": "terms_section",
      "type": "Row",
      "style": {
        "display": "flex",
        "flexDirection": "row",
        "alignItems": "flex-start",
        "gap": "12px",
        "marginBottom": "24px"
      },
      "children": [
        {
          "id": "checkbox",
          "type": "Icon",
          "style": {
            "width": "20px",
            "height": "20px",
            "borderRadius": "4px",
            "border": "2px solid #666666",
            "backgroundColor": "transparent",
            "color": "#666666"
          }
        },
        {
          "id": "terms_text",
          "type": "Text",
          "text": "I confirm that I have read and agree to DeepSeek's Terms of Use and Privacy Policy",
          "style": {
            "fontSize": "14px",
            "color": "#CCCCCC",
            "lineHeight": "1.4",
            "flex": "1"
          }
        }
      ]
    }
  ]
}
